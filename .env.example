# Database Environment Configuration
# Copy this to .env and update with your database credentials

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rpg_game
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Settings
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=2000
DB_IDLE_TIMEOUT=30000

# SSL Settings (for production)
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Development settings
NODE_ENV=development
LOG_LEVEL=info

# JWT Settings
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Session Settings
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=604800000

# Redis Configuration (for WebSocket scaling)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server Configuration
PORT=3000
HOST=0.0.0.0

# CORS Settings
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Email Configuration (for registration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourserver.com

# Game Settings
GAME_TIME_MULTIPLIER=1.0
EXPERIENCE_MULTIPLIER=1.0
DROP_RATE_MULTIPLIER=1.0
MAX_CHARACTERS_PER_USER=3

# Security Settings
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
USERNAME_MIN_LENGTH=3
USERNAME_MAX_LENGTH=20

# Chat Settings
CHAT_MESSAGE_MAX_LENGTH=500
CHAT_RATE_LIMIT_PER_MINUTE=10
CHAT_HISTORY_RETENTION_DAYS=30

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Server is under maintenance. Please try again later.

# Logging
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Performance Monitoring
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD=1000

# Development Tools
ENABLE_CORS=true
ENABLE_MORGAN_LOGGING=true
ENABLE_HELMET_SECURITY=true
