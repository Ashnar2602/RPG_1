# Environment variables for RPG Fantasy Multiplayer Server

# Database Configuration
DATABASE_URL="postgresql://rpg_user:rpg_password@localhost:5432/rpg_db"
REDIS_URL="redis://localhost:6379"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production-make-it-long-and-complex"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"
BCRYPT_ROUNDS=12

# Server Configuration
PORT=5000
NODE_ENV=development
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Integration (configure when needed)
OPENAI_API_KEY=""
CLAUDE_API_KEY=""
AI_ENABLED=false

# Logging Configuration
LOG_LEVEL="debug"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE="10mb"
LOG_MAX_FILES=5

# Game Configuration
GAME_TICK_RATE=60
MAX_PLAYERS_PER_LOCATION=50
AUTO_SAVE_INTERVAL=30000
SESSION_TIMEOUT=1800000

# Email Configuration (for notifications)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif"

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=10000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=60000
