# RPG_1 - Backend Environment Configuration
# Copy this to .env and configure with your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=rpg_db
DB_USER=rpg_user
DB_PASSWORD=rpg_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Chat Configuration
CHAT_PROFANITY_FILTER=true
CHAT_RATE_LIMIT_PER_MINUTE=10

# Game Configuration
MAX_CHARACTERS_PER_USER=3
EXPERIENCE_MULTIPLIER=1.0

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Server is under maintenance. Please try again later.

# Redis Configuration (Optional - for scaling)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# Development Tools
ENABLE_MORGAN_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET_SECURITY=true
